$%I0
NIL
* (checklabel (createlabel $inchar $linenum))
NIL
* (incf $linenum)
1
* (createlabel $inchar $linenum)
$%I1
NIL
* (checklabel (createlabel $inchar $linenum))
T
* (makelabel $inchar)
$%I1
* *linelabel*
$%I1
* $labels
((MLIST SIMP) $%I1)
* (set *linelabel* '((mplus) $a $b))
((MPLUS) $A $B)
* *linelabel*
$%I1
* $%I1
((MPLUS) $A $B)
* (checklabel $inchar)
NIL
* (incf $linenum)
2
* (makelabel $inchar)
$%I2
